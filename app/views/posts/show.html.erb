<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <br><br><br>
      <div class="card">
        <div class="card-header"><span class="card-title"><%= @post.title %></span></div>
        <div class="card-body">
          <%= image_tag url_for(@post.image), height: 400 %>
          <p class="card-text">
            <%= @post.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <br><br><br>
  <div class="row">
    <div class="col-md-5">
      <h5>Commentarios: </h5>
      <%= render @post.comments %>
    </div>
  </div>
  <hr>
  <br>
  <div class="row">
    <div class="col-md-6">
      <h5>Commentar: </h5>
      <%= simple_form_for([@post, @post.comments.build]) do |f| %>
        <%= f.input :comment, label: 'Escribe Tu Comentario: '  %>
        <%= f.submit "Comentar", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
