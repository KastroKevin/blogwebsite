<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <div class="card">
        <div class="card-header"><span class="card-title">Entrar</span></div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="form-group">
                <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.input :password, required: false, class: "form-control" %>
              </div>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "devise/shared/links" %>
